<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">

	<!-- apply web template -->
    <decorator name="trang-chu" page="web.jsp">
       <pattern>/trang-chu</pattern>
    </decorator>

    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    <decorator name="user" page="user.jsp">
        <pattern>/user*</pattern>
    </decorator>
    <decorator name="login" page="login.jsp">
        <pattern>/login</pattern>
    </decorator>
    <decorator name="register" page="register.jsp">
        <pattern>/register</pattern>
    </decorator>
    <decorator name="forgotPassword" page="forgotPassword.jsp">
        <pattern>/forgotPassword</pattern>
    </decorator>
</decorators>